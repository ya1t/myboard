<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">

  </head>
  <body>

    <%- include('menu.html') %>

<div class="container mt-4">
      <form action="/edit" method="post" enctype="multipart/form-data">
        <input type="hidden" name="id" value="<%= data.id %>">
        <div class="form-group">
          <label>제목</label>
          <input type="text" value="<%= data.title %>" name="title" class="form-control">
        </div>
        <p></p>
        <div class="form-group">
          <label>내용</label>
          <textarea name="content" rows="10" class="form-control"><%= data.content %></textarea>
        </div>
        <p></p>
        <div class="form-group">
          <label>email</label>
          <input type="email" value="<%= data.email %>" name="email" class="form-control">
        </div>
        <p></p>

        <% if (data.imagepath) { %>
          <div class="form-group">
            <label>현재 이미지</label>
            <img src="<%= data.imagepath %>" width="200"/>
          </div>
          <p></p>
        <% } %>

        <button type="submit" class="btn btn-warning" style="float:right;">수정</button>
      </form>
    </div>
    
    <div class="container mt-3">
      <form action="/photo" method="POST" enctype="multipart/form-data">
        <input type="file" name="picture" accept="image/*" class="btn btn-outline-primary"></input>
        <button type="submit" class="btn btn-primary">첨부</button>
      </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>